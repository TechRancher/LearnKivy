<MyLayout>
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height 

        MDLabel:
            text: "Select Pizza Toppings"
            halign: 'center'
            font_style: 'H4'    

        MDGridLayout:
            cols: 2

            MDLabel:
                text: "Pepperoni"
                halign: 'center'
                font_style: 'H5'

            MDCheckbox:
                id: pepperoni
                # Add group in order to make the checkboxes mutually exclusive
                group: 'toppings'
                on_active: root.checkbox_click(self,self.active, "Pepperoni")

            MDLabel:
                text: "Meat"
                halign: 'center'
                font_style: 'H5'

            MDCheckbox:
                id: meat
                # Add group in order to make the checkboxes mutually exclusive
                group: 'toppings'
                on_active: root.checkbox_click(self,self.active, "Meat")

            MDLabel:
                text: "Musroom"
                halign: 'center'
                font_style: 'H5'

            MDCheckbox:
                id: musroom
                # Add group in order to make the checkboxes mutually exclusive
                group: 'toppings'
                on_active: root.checkbox_click(self,self.active, "Musroom")

            MDLabel:
                text: "Cheese"
                halign: 'center'
                font_style: 'H5'

            MDCheckbox:
                id: cheese
                # Add group in order to make the checkboxes mutually exclusive
                group: 'toppings'
                on_active: root.checkbox_click(self,self.active, "Cheese")

        MDLabel:
            id: output_label
            text: ""
            halign: 'center'
            font_style: 'H4' 