<Button_New@MDRaisedButton>
    size_hint: (.2,.2)
    font_size: 32
    padding: 10

<ButtonBox@MDRaisedButton>
    size_hint: (.2,.2)
    font_size: 32
    padding: 10
    background_color: (157/255, 157/255, 157/255, 1)

<MyCalculator>

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height 

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 60
            size_hint: (1, .20)

        GridLayout:
            cols: 4
            rows: 5
            padding: 5
            spacing: 5
            pos_hint: {'x': .05}

            # Row 1
            Button_New:
                id: percent
                text: "%"
                on_press: 
                    root.math_sign("%")
                    root.percent_decimal()

            
            Button_New:
                id: clear
                text: "C"
                on_press: root.clear()
            
            Button_New:
                id: back_up
                text: u"\u00AB"
                on_press: root.remove()
            
            Button_New:
                id: divide
                text: u'\u00F7'
                on_press: root.math_sign('/')

            # Row 2
            ButtonBox:
                id: seven
                text: "7"
                on_press: root.button_press(7)
            
            ButtonBox:
                id: eight
                text: "8"
                on_press: root.button_press(8)
            
            ButtonBox:
                id: nine
                text: "9"
                on_press: root.button_press(9)
            
            Button_New:
                id: multiply
                text: "x"
                on_press: root.math_sign("*")

            # Row 3
            ButtonBox:
                id: four
                text: "4"
                on_press: root.button_press(4)
            
            ButtonBox:
                id: five
                text: "5"
                on_press: root.button_press(5)
            
            ButtonBox:
                id: six
                text: "6"
                on_press: root.button_press(6)
            
            Button_New:
                id: minus
                text: "-"
                on_press: root.math_sign("-")

            # Row 4
            ButtonBox:
                id: one 
                text: "1"
                on_press: root.button_press(1)
            
            ButtonBox:
                id: two
                text: "2"
                on_press: root.button_press(2)
            
            ButtonBox:
                id: three
                text: "3"
                on_press: root.button_press(3)
            
            Button_New:
                id: plus
                text: "+"
                on_press: root.math_sign("+")

            # Row 5
            ButtonBox:
                id: negative
                text: "+/-"
                on_press: root.pos_neg()
            
            ButtonBox:
                id: zero
                text: "0"
                on_press: root.button_press(0)
            
            ButtonBox:
                id: dot
                text: "."
                on_press: root.dot()
            
            Button_New:
                id: equal
                text: "="
                on_press: root.equals()
    FloatLayout:
        size: root.width, root.height

        MDFillRoundFlatButton:
            text: "Home"
            pos_hint: {'center_x': .5,'center_y': .20}
            
            