<MyLayout>

    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height 

        MDLabel:
            text: "Pick Your Toppings"
            color: 0,0,0,1
            font_style: 'H4'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            id: click_label

        MDDropDownItem:
            id: dropdown_item
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            text: "Select Toppings"
            on_release: root.menu()